<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <GridLayout
        android:id="@+id/gridLayoutCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="5"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 카테고리 아이콘들을 여기에 추가, 예시로 10개의 버튼을 추가함 -->
        <!-- 실제로는 이미지 버튼이나 이미지뷰를 사용하고 각각에 적절한 아이콘을 설정해야 함 -->
        <Button android:text="카테고리 1"/>
        <Button android:text="카테고리 2"/>
        <Button android:text="카테고리 3"/>
        <!-- ... 나머지 아이콘들 ... -->
        <Button android:text="카테고리 10"/>
    </GridLayout>
    <!-- 카테고리 아이콘을 나열할 수평 스크롤 뷰 -->

    <!-- 로또 통을 표현할 뷰 -->
    <ImageView
        android:id="@+id/imageViewLotto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutCategory"
        app:srcCompat="@drawable/lottotong" />

    <!-- 뽑기 버튼 -->
    <Button
        android:id="@+id/buttonDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뽑기"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
