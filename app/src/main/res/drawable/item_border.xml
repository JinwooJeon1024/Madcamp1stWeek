<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <solid android:color="#FFFFFF"/> <!-- 여기서는 흰색을 배경으로 사용합니다. -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#FF000000"/>  <!-- 테두리 색상, 여기서는 회색을 사용합니다. -->

    <!-- 모서리 둥글기 -->
    <corners android:radius="4dp"/> <!-- 각 모서리의 둥근 정도를 설정합니다. -->

    <!-- 그림자나 패딩이 필요한 경우 추가할 수 있습니다. -->
</shape>
